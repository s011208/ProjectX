<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <HorizontalScrollView
        android:id="@+id/h_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/data_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00000000"
                android:dividerHeight="0px" >
            </ListView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/radio_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/h_scrollview"
        android:orientation="horizontal"
        android:padding="6dp" >

        <RadioGroup
            android:id="@+id/add_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp" >

            <RadioButton
                android:id="@+id/add1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+1" />

            <RadioButton
                android:id="@+id/add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+2" />

            <RadioButton
                android:id="@+id/add3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+3" />

            <RadioButton
                android:id="@+id/add4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+4" />

            <RadioButton
                android:id="@+id/add5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+5" />

            <RadioButton
                android:id="@+id/add6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+6" />

            <RadioButton
                android:id="@+id/add7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+7" />

            <RadioButton
                android:id="@+id/add8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+8" />

            <RadioButton
                android:id="@+id/add9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+9" />

            <RadioButton
                android:id="@+id/add10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="+10" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/minus_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp" >

            <RadioButton
                android:id="@+id/minus1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-1" />

            <RadioButton
                android:id="@+id/minus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-2" />

            <RadioButton
                android:id="@+id/minus3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-3" />

            <RadioButton
                android:id="@+id/minus4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-4" />

            <RadioButton
                android:id="@+id/minus5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-5" />

            <RadioButton
                android:id="@+id/minus6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-6" />

            <RadioButton
                android:id="@+id/minus7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-7" />

            <RadioButton
                android:id="@+id/minus8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-8" />

            <RadioButton
                android:id="@+id/minus9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-9" />

            <RadioButton
                android:id="@+id/minus10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/add_or_minus_table_controll_padding"
                android:text="-10" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controll_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/radio_groups"
        android:layout_toRightOf="@+id/h_scrollview"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/move_to_top"
            style="@style/btnStyleBeige"
            android:layout_width="@dimen/big_table_fragment_button_width"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="移至最上方"
            android:textSize="@dimen/big_table_fragment_button_textsize" />

        <Button
            android:id="@+id/move_to_bottom"
            style="@style/btnStyleBeige"
            android:layout_width="@dimen/big_table_fragment_button_width"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="移至最下方"
            android:textSize="@dimen/big_table_fragment_button_textsize" />
    </LinearLayout>

</RelativeLayout>